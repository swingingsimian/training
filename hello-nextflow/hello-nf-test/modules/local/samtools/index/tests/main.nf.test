nextflow_process {

    name "Test Process SAMTOOLS_INDEX"
    script "../main.nf"
    process "SAMTOOLS_INDEX"

    //test("Should run without failures") {
    test("reads_son [bam]") {

        when {
            params {
                // define parameters here. Example:
                // outdir = "tests/results"
                outdir = "tests/results"
            }
            process {
                """
                input[0] = file("${projectDir}/data/bam/reads_son.bam")
                """
            }
        }

        then {
            assert process.success
            assert snapshot(process.out).match()  // Need to be sure original run output is correct!
            // if it is not, then we need to run with --update-snapshot to overwrite
        }

    }   

